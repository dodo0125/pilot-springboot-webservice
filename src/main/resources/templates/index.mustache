{{>layout/header}}
<h1>스프링 부트로 시작하는 웹서비스</h1>
    <div class = "col-mid-12">
        <div class = "row">
            <div>
                <a href = "/customer/search" role="button" class = "btn btn-primary">고객정보 검색</a>
            </div>
            <div>
                <a href = "/customer/searchinfo" role="button" class = "btn btn-primary">고객의 서비스 정보 검색</a>
            </div>
            <div class = "col-md-6">
                <a href = "/customer/save" role="button" class = "btn btn-primary">신규 고객 등록</a>
            </div>
        </div>
        <br>
        <!-- 고객정보 목록 출력 영역 -->
        <table class = "table table-horizontal table-bordered">
            <thead class = "thead-strong">
            <tr>
                <th>고객ID</th>
                <th>고객명</th>
                <th>나이</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id ="tbody">
            {{#customer}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href = "/customer/update/{{id}}">{{customername}}</a></td>
                    <td>{{age}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/customer}}
            </tbody>
        </table>


        <!-- 서비스등록 영역 -->
        <br>
        <div class = "row">
            <div class = "col-md-6">
                <a href = "/sktservice/save" role="button" class = "btn btn-primary">신규 서비스 등록</a>
            </div>
        </div>

        <br>
        <!-- 서비스정보 출력 영역 -->
        <table class = "table table-horizontal table-bordered">
            <thead class = "thead-strong">
            <tr>
                <th>서비스ID</th>
                <th>서비스번호</th>
                <th>고객ID</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id ="tbody">
            {{#sktservice}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href = "/sktservice/update/{{id}}">{{svcnum}}</a></td>
                    <td>{{customerid}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/sktservice}}
            </tbody>
        </table>
    </div>
{{>layout/footer}}